<!-- Incluir o head -->
<%- include('./partials/head') %> 
<body>
 
  <!-- Incluir o menu -->
  <%- include('./partials/navbar') %>

  <div class="container">

    <% avisos.forEach(aviso => { %>
      <div class="card shadow mt-4">
        <div class="card-header bg-purple text-white pl-4 p-4 d-flex align-items-center justify-content-between">
          <h2><i class="fas fa-bell mr-2"></i> <%= aviso.titulo %> </h2>
          <h3 class="lead"> <%= moment(aviso.data).format("DD/MM/YYYY") %> </h3>
        </div>
          <div class="card-body p-4">
            <!-- Info Perfil -->
            <div class="d-flex align-items-center">
              <img src="img/skye.jpg" class="img-thumbnail rounded-circle" width="75">
              <div class="ml-3">
                <div class="font-weight-bold">Skye</div>
                <div class="text-secondary"> <%= moment(aviso.data, "YYYYMMDD").fromNow(); %></div>
              </div>
            </div>
            <!-- Descrição do Aviso -->
            <div class="mt-4">
              <%= aviso.mensagem %>
            </div>
          </div> <!-- card-body -->
        </div> <!-- card -->
    <% }) %>

    </div> <!-- container -->

  <%- include('./partials/scripts_import') %> 
</body>
</html>