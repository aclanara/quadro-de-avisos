<!-- Incluir o head -->
<%- include('./partials/head') %> 
<body>
 
  <!-- Incluir o menu -->
  <%- include('./partials/navbar') %>

  <div class="container">
    <br> <br>

    <a href="http://"><i class="fas fa-arrow-left"></i> Voltar</a> 
    <br><br>

    <div class="card shadow">
      <div class="card-header bg-purple text-white pl-4 p-4">
        <h2 class="float-left"><i class="fas fa-list"></i> Avisos Cadastrados</h2>
        <a href="/avisos/novo" class="btn btn-lg btn-outline-light float-right">
        <i class="fas fa-plus-circle"></i> Novo Aviso</a>
      </div>
      <div class="card-body p-4">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Título</th>
              <th scope="col">Data</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>

            <% if (avisos.length < 1) { %>
             <tr>
               <td colspan="4" class="text-center">Nenhum aviso cadastrado!</td>
             </tr>
            <% } %>

            <% avisos.forEach(aviso => { %>
              <tr>
                <th scope="row"> <%= aviso.ID_avisos %> </th>
                <td> <%= aviso.titulo %> </td>
                <td> <%= moment(aviso.data).format("DD/MM/YYYY") %> </td>
                <td>
                  <button class="btn btn-secondary">Excluir</button>
                  <button class="btn btn-primary">Editar</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div> <!-- card-body -->
      </div> <!-- card -->
    </div> <!-- container -->

  <%- include('./partials/scripts_import') %> 
</body>
</html>